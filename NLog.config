<?xml version="1.0" encoding="utf-8" ?>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
        autoReload="true"
        throwExceptions="false"
        internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <!-- optional, add some variables
    https://github.com/nlog/NLog/wiki/Configuration-file#variables
    -->
    <variable name="myvar" value="myvalue"/>
    <targets>
      <!--
      add your targets here
      See https://github.com/nlog/NLog/wiki/Targets for possible targets.
      See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
      -->
      <!-- Данная цель выводит в консоль -->
      <target name="console" xsi:type="Console" layout="[${longdate}] [${uppercase:${level}}]: ${message}" />
      <!--
            Данная цель сохраняет лог в файл вида logs\2018-04-20.log
            вид сообщения: [2021-03-21 14:01:25.7702] [DEBUG]: debug message
      -->      
      <target xsi:type="File" name="filedatadebug" fileName="${basedir}/logs/${shortdate}.log" layout="[${longdate}] [${uppercase:${level}}]: ${message}" />
    </targets>
    <rules>
      <!-- Данное правило пишет все сообщения с минимальным уровнем Debug в целевой лог filedata -->
      <logger name="*" minlevel="Debug" writeTo="filedatadebug" />
      <!-- Данное правило пишет все сообщения с минимальным уровнем Trace в консоль -->
      <logger name="*" minlevel="Trace" writeTo="console" />
    </rules>
</nlog>